// Este arquivo define o esquema do seu banco de dados para o Prisma
// O Prisma irá gerar o cliente baseado neste modelo.

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

// Modelagem da entidade Filme, mapeada para a tabela 'Filme' no MySQL
model Filme {
  id             Int     @id @default(autoincrement()) // Chave primária
  titulo         String  @db.VarChar(255) // Título do filme
  sinopse        String? @db.Text // Sinopse (texto longo, opcional)
  diretor        String? @db.VarChar(100) // Nome do diretor (opcional)
  ano_lancamento Int?    @db.Year // Ano de lançamento
  genero         String? @db.VarChar(50) // Gênero do filme

  @@map("Filme") // Mapeia o nome do modelo para o nome real da tabela no DB
}
